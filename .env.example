# BB Gold - Jewelry Manufacturer Gold Bookkeeping System
# Environment Configuration Template
# Copy this file to .env and update with your actual values

# PostgreSQL Database Configuration
POSTGRES_DB=bb_gold
POSTGRES_USER=bb_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Timezone Configuration (adjust to your location)
TZ=Europe/Zurich

# Adminer (Database Management Interface) Configuration
ADMINER_PORT=8080

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Additional Configuration (for future use)
# APP_ENV=production
# LOG_LEVEL=info