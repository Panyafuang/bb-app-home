# frontend/Dockerfile
FROM node:20-alpine AS builder
WORKDIR /usr/src/app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# Production image — serve built files with 'serve' (เบา)
FROM node:20-alpine AS runtime
WORKDIR /usr/src/app
RUN npm install -g serve

COPY --from=builder /usr/src/app/dist ./dist

EXPOSE 5173
CMD ["serve", "-s", "dist", "-l", "5173"]
